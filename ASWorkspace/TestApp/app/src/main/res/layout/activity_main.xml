<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topRelLayout"
        android:background="@color/grey">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/backArrow"
            android:src="@drawable/ic_back_arrow"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/settings"
            android:src="@drawable/ic_settings"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/middleRelLayout"
        android:layout_below="@+id/topRelLayout"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userDetails">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/userImg"
                android:src="@mipmap/ic_launcher_round"
                android:layout_margin="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:layout_toRightOf="@+id/userImg"
                android:id="@+id/nameEditText"
                android:layout_marginTop="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/emailEditText"
                android:layout_toRightOf="@+id/userImg"
                android:layout_below="@+id/nameEditText"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionRelLayout"
            android:layout_below="@id/userDetails">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                android:hint="Description"
                android:id="@+id/descriptionEditText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/genderTextView"
                android:layout_below="@+id/descriptionEditText"
                android:text="GENDER"
                android:layout_marginTop="10dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/genderRadioGroup"
                android:layout_below="@id/genderTextView"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbMale"
                    android:text="Male"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/rbFemale"
                    android:text="Female"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rbOther"
                    android:text="Other"/>
            </RadioGroup>
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/countryRelLayout"
            android:layout_below="@id/descriptionRelLayout"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countryText"
                android:text="Country: "/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countrySpinner"
                android:layout_below="@+id/countryText"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/websiteRelLayout"
            android:layout_below="@id/countryRelLayout">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/websiteEditText"
                android:hint="Website"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/finishBtn"
                android:text="FINISH"
                android:layout_margin="30dp"
                android:layout_below="@id/websiteEditText"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bottomRelLayout"
            android:layout_below="@+id/websiteRelLayout"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@color/grey">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/voiceRecorder"
                android:src="@drawable/ic_recorder"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/cart"
                android:src="@drawable/ic_cart"
                android:layout_toRightOf="@+id/voiceRecorder"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/timer"
                android:src="@drawable/ic_timer"
                android:layout_toRightOf="@+id/cart"
                android:layout_marginLeft="20dp"/>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>